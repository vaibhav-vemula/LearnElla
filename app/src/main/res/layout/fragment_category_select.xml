                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearLayout4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="12dp"
